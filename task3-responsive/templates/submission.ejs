<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">MyApp</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/">Form</a></li>
          <li class="nav-item"><a class="nav-link" href="/submissions">Submissions</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <main class="container mb-5">
<div class="card shadow p-4 animate__animated animate__fadeIn">
  <h2 class="mb-4 text-info text-center">All Submissions</h2>

  <% if (submissions.length === 0) { %>
    <div class="text-center py-5">
      <p class="text-muted">No submissions yet. Be the first to register!</p>
      <a href="/" class="btn btn-primary mt-3">Register Now</a>
    </div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Hobbies</th>
            <th>City</th>
            <th>Terms</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% submissions.forEach((s, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= s.fullname %></td>
              <td><%= s.email %></td>
              <td><%= s.gender %></td>
              <td><%= s.hobbies.join(', ') || 'None' %></td>
              <td><%= s.city %></td>
              <td class="text-center"><%= s.agreed ? '✔️' : '❌' %></td>
              <td class="small text-muted"><%= new Date(s.submittedAt).toLocaleDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <div class="mt-4">
      <a href="/" class="btn btn-outline-secondary">Back to Form</a>
    </div>
  <% } %>
</div>
  </main>

  <footer class="bg-dark text-white text-center py-3">
    <p class="mb-0">© <%= new Date().getFullYear() %> MyApp — All rights reserved.</p>
  </footer>
</body>
</html>
